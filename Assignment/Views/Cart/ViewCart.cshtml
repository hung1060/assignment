@{
    Layout = null;
}
@using Assignment.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Cart</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background: #ddd;
            text-align: center;
        }

        .title {
            margin-bottom: 5vh;
        }

        .card {
            margin: 0 auto;
            margin-top: 100px;
            width: 1300px;
            box-shadow: 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            border-radius: 1rem;
            border: transparent;
        }

        .cart {
            background-color: #fff;
            padding: 4vh 5vh;
            border-bottom-left-radius: 1rem;
            border-top-left-radius: 1rem;
        }

        .summary {
            background-color: #ddd;
            border-top-right-radius: 1rem;
            border-bottom-right-radius: 1rem;
            padding: 4vh;
            color: rgb(65, 65, 65);
        }

            .summary .col-2 {
                padding: 0;
            }

            .summary .col-10 {
                padding: 0;
            }

        .row {
            margin: 0;
        }

        .title b {
            font-size: 1.5rem;
        }

        .main {
            margin: 0;
            padding: 2vh 0;
            width: 100%;
        }

        .col-2, .col {
            padding: 0 1vh;
        }

        a {
            padding: 0 1vh;
        }

        .close {
            margin-left: auto;
            font-size: 0.7rem;
        }

        img {
            width: 3.5rem;
        }

        .back-to-shop {
            margin-top: 4.5rem;
        }

        h5 {
            margin-top: 4vh;
        }

        hr {
            margin-top: 1.25rem;
        }

        form {
            padding: 2vh 0;
        }

        select {
            border: 1px solid rgba(0, 0, 0, 0.137);
            padding: 1.5vh 1vh;
            margin-bottom: 4vh;
            outline: none;
            width: 100%;
            background-color: rgb(247, 247, 247);
        }

        input {
            border: 1px solid rgba(0, 0, 0, 0.137);
            padding: 1vh;
            margin-bottom: 4vh;
            outline: none;
            width: 100%;
            background-color: rgb(247, 247, 247);
        }

            input:focus::-webkit-input-placeholder {
                color: transparent;
            }

        .btn {
            background-color: #000;
            border-color: #000;
            color: white;
            width: 100%;
            font-size: 0.7rem;
            margin-top: 4vh;
            padding: 1vh;
            border-radius: 0;
        }

            .btn:focus {
                box-shadow: none;
                outline: none;
                box-shadow: none;
                color: white;
                -webkit-box-shadow: none;
                -webkit-user-select: none;
                transition: none;
            }

            .btn:hover {
                color: white;
            }

        a {
            color: black;
        }

            a:hover {
                color: black;
                text-decoration: none;
            }

        #code {
            background-image: linear-gradient(to left, rgba(255, 255, 255, 0.253), rgba(255, 255, 255, 0.185)), url("https://img.icons8.com/small/16/000000/long-arrow-right.png");
            background-repeat: no-repeat;
            background-position-x: 95%;
            background-position-y: center;
        }
    </style>
</head>
<body>
    @{
        NorthwindContext context = new NorthwindContext();
    }
    <div class="card">
        <div class="row">
            <div class="col-md-8 cart">
                <div class="title">
                    <div class="row">
                        <div class=""><h4><b>Shopping Cart</b></h4></div>
                        <div class="col align-self-center text-right text-muted">@(ViewBag.Quantity) items</div>
                    </div>
                </div>
                <div style="height: 300px; overflow: auto">
                    @foreach (var p in ViewBag.Cart)
                    {
                        Product product = context.Products.Find(p.Key);
                        Category category = context.Categories.Find(product.CategoryId);
                        <div class="row border-top border-bottom">
                            <div class="row main align-items-center">
                                <div class="col-2"><img class="img-fluid" src="https://i.imgur.com/1GrakTl.jpg"></div>
                                <div class="col">
                                    <div class="row text-muted">@category.CategoryName</div>
                                    <div class="row" style="width: 250px">@product.ProductName</div>
                                </div>
                                <div class="col">
                                    <a href="/Cart/DecreaseProduct?id=@p.Key">-</a><a href="" class="border">@p.Value</a><a href="/Cart/IncreaseProduct?id=@p.Key">+</a>
                                </div>
                                <div class="col">&dollar; @(Math.Round((decimal)product.UnitPrice, 2))</div>
                                <a href="/Cart/RemoveProduct?id=@p.Key" class="col-2"><span>&#10005;</span></a>
                            </div>
                        </div>
                    }
                </div>
                <a href="/Product/List"><div class="back-to-shop">&leftarrow;<span class="text-muted"> Back to shop</span></a>
            </div>
        </div>
        <div class="col-md-4 summary">
            <div><h5><b>Summary</b></h5></div>
            @{
                decimal total = 0;
                int i = 1;
            }
            <hr>
            <div style="height:300px; overflow:auto">
                @foreach (var p in ViewBag.Cart)
                {
                    Product product = context.Products.Find(p.Key);
                    total += p.Value * product.UnitPrice;
                    <div class="row">
                        <div class="col" style="padding-left:0;">ITEMS @(i++)</div>
                        <div class="col text-right">&dollar; @(Math.Round(p.Value*product.UnitPrice,2))</div>
                    </div>
                }
            </div>
            <div>
                <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                    <div class="col">TOTAL PRICE</div>
                    <div class="col text-right">&dollar; @Math.Round(total,2)</div>
                </div>
                <a href="/Cart/AddOrder"><button class="btn">CHECKOUT</button></a>
            </div>
        </div>
    </div>
</body>
</html>

